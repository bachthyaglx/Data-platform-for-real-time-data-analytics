{
  "tableName": "orders_pinot",
  "tableType": "REALTIME",
  "segmentsConfig": {
    "schemaName": "orders_pinot",
    "replication": "1",
    "timeColumnName": "create_ts",
    "timeType": "MILLISECONDS",
    "retentionTimeUnit": "DAYS",
    "retentionTimeValue": "7",
    "segmentPushType": "APPEND"
  },
  "tenants": {
    "broker": "DefaultTenant",
    "server": "DefaultTenant"
  },
  "tableIndexConfig": {
    "loadMode": "MMAP",
    "streamConfigs": {
      "streamType": "kafka",
      "stream.kafka.consumer.type": "lowlevel",
      "stream.kafka.topic.name": "orders",
      "stream.kafka.decoder.class.name": "org.apache.pinot.plugin.stream.kafka.KafkaJSONMessageDecoder",
      "stream.kafka.consumer.factory.class.name": "org.apache.pinot.plugin.stream.kafka20.KafkaConsumerFactory",
      "stream.kafka.broker.list": "broker:9092",
      "stream.kafka.consumer.prop.bootstrap.servers": "broker:9092",
      "stream.kafka.consumer.prop.group.id": "pinot-consumer-orders-rt",
      "stream.kafka.consumer.offsets.initial": "smallest"
    }
  },
  "ingestionConfig": {
    "transformConfigs": []
  },
  "metadata": {}
}